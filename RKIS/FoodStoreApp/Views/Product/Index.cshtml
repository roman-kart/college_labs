@using FoodStoreApp.Data
@model IEnumerable<FoodStoreApp.Models.Product>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Товары</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Upsert" class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp; Создать
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Название
                    </th>
                    <th>
                        Цена
                    </th>
                    <th>
                        Группа
                    </th>
                    <th>
                        Произодитель
                    </th>
                    <th>
                        Изображения
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    var _db = (ApplicationDbContext)ViewBag._db;
                    // I Love Entity Framework!!!
                    product.Manufacturer = _db.Manufacturers.FirstOrDefault(m => m.ManufacturerId == product.ManufacturerId);
                    product.Category = _db.Category.FirstOrDefault(m => m.CategoryId == product.CategoryId);
                    product.UserFiles = _db.UserFiles.Where(uf => uf.ProductId == product.ProductId).ToList(); 
                    <tr>
                        <td width="30%">@product.Name</td>
                        <td width="20%">@product.Price</td>
                        <td width="20%">
                            @if (product.Category == null || product.Category.Title == null)
                            {
                                <span>Нет</span>
                            }
                            else
                            {
                                <span>@product.Category.Title</span>
                            }
                        </td>
                        <td>
                            @if (product.Manufacturer == null || product.Manufacturer.Title == null)
                            {
                                <span>Нет</span>
                            }
                            else
                            {
                                <span>@product.Manufacturer.Title</span>
                            }
                        </td>
                        <td>
                            @if(product.UserFiles != null){
                                foreach (var img in product.UserFiles)
                                {
                                    <img style='width:80px; height:60px;' src="data:image/jpeg;base64,@(Convert.ToBase64String(img.Content))" />
                                }
                            }
                            else
                            {
                                <span>Нет</span>
                            }
                        </td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-route-Id="@product.ProductId" asp-action="Upsert" class="btn btn-primary mx-2">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-route-Id="@product.ProductId" asp-action="Delete" class="btn btn-danger mx-2">
                                    <i class="far fa-trash-alt"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
                </tbody>
        </table>
    }
    else
    {
        <p> Товаров не найдено </p>
    }

</div>
