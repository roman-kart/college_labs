@model FoodStoreApp.Models.ViewModels.ProductViewModel

@{
    var title = "Добавить продукт";
    var isCreate = Model.Id == 0;
    var aspAction = isCreate ? "Create" : "Update";
}

<form method="post" enctype="multipart/form-data" asp-action="@aspAction">
    @if (!isCreate)
    {
        title = "Редактирование";
        <input asp-for="Id" hidden />
    }
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-info pl-3">@title</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row mt-3">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row mt-3">
                    <div class="col-4">
                        <label asp-for="Price"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Price" type="number" step="any" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                </div>
                
                <div class="form-group row mt-3">
                    <div class="col-4">
                        <label asp-for="Description"></label>
                    </div>
                    <div class="col-8">
                        <textarea asp-for="Description" class="form-control summernote"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                </div>
                 <div class="form-group row mt-3">
                    <div class="col-4">
                        Изображения
                    </div>
                    <div class="col-8">
                        <input asp-for="Images" class="form-control"/>
                        <span asp-validation-for="Images" class="text-danger"></span>
                    </div>
                </div>
                
                 <div class="form-group row mt-3">
                    <div class="col-4">
                        <label asp-for="CategoryId"></label>
                    </div>
                    <div class="col-8">
                        <select asp-for="CategoryId" asp-items="@ViewBag.CategoryDropDown" class="form-control">
                            <option disabled selected>--Выбрать Категорию--</option>
                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row mt-3">
                    <div class="col-4">
                        <label asp-for="ManufacturerId"></label>
                    </div>
                    <div class="col-8">
                        <select asp-for="ManufacturerId" asp-items="@ViewBag.ManufacturersDropDown" class="form-control">
                            <option disabled selected>--Выбрать Производителя--</option>
                        </select>
                        <span asp-validation-for="ManufacturerId" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="form-group row mt-3">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            @if (Model.Id != 0)
                            {
                            //update
                                <input type="submit" class="btn btn-info w-100" value="Update" />
                            }
                            else
                            {
                            //create
                                <input type="submit" class="btn btn-primary w-100" value="Create" />
                            }

                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i> Назад</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>
